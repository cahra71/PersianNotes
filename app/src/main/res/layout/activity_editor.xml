<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView android:id="@+id/txtRecognized" android:layout_width="match_parent" android:layout_height="wrap_content" android:textSize="20sp" android:padding="8dp"/>
    <FrameLayout android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
        <com.mihan.persiannotes.drawing.DrawingView android:id="@+id/drawingView" android:layout_width="match_parent" android:layout_height="match_parent"/>
    </FrameLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
        <Button android:id="@+id/btnClear" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:text="پاک کن"/>
        <Button android:id="@+id/btnRecognize" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:text="تشخیص"/>
        <Button android:id="@+id/btnSave" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:text="ذخیره"/>
        <Button android:id="@+id/btnExportPdf" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:text="صادرات PDF"/>
    </LinearLayout>
</LinearLayout>
